{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./lib",
    "typeRoots": ["../../node_modules/@types", "./node_modules/@types", "./@types"],
    "plugins": [{"name": "typescript-plugin-css-modules"}]
  },
  "include": [
    "@types/**/*.ts",
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "script/**/*.ts"
  ],
  "exclude": [
    "src/utils/story-helpers.tsx",
    "**/*.stories.tsx",
    "**/*.test.tsx",
    "**/*.figma.tsx",
    "script/**/*.ts",
    "src/__tests__/",
    "src/utils/test-*.tsx",
    "src/utils/testing.tsx",
    "e2e/**/*.ts",
    "playwright.config.ts",
  ]
}
